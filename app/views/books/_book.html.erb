<div id="<%= dom_id book %>">
  <div>
    <% if book.cover.attached? %>
      <%= image_tag book.cover %>
    <% else %>
      <%= image_tag "seeds/books/cover-default.webp" %>
    <% end %>
  </div>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <% if book.author.present? %>
    <p>
      <strong>Author:</strong>
      <%= link_to book.author.name, book.author %>
    </p>
  <% end %>
</div>
